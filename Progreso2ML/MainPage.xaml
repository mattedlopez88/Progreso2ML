<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Progreso2ML.MainPage"
             Title="MainPage">
    <StackLayout>
        <Label Text="{Binding Title}" HorizontalOptions="Start" VerticalOptions="Start" Margin="10"/>
        <Label Text="{Binding Latitude}" HorizontalOptions="Start" VerticalOptions="Start" Margin="10,30,0,0"/>
        <Label Text="{Binding Longitude}" HorizontalOptions="Start" VerticalOptions="Start" Margin="10,60,0,0"/>
        <Button Text="Actualizar" Clicked="OnCounterClicked" HorizontalOptions="Center" VerticalOptions="Center" Margin="10,90,0,0"/>
    </StackLayout>
</ContentPage>
